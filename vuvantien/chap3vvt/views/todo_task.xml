<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="chap2vvt.action_todo_task">
            <field name="context">{'search_default_filter_my_tasks': True}</field>
        </record>
        <!-- Extend form -->
        <record id="view_form_todo_task_inherited" model="ir.ui.view">
            <field name="name">view_form_todo_task_inherited</field>
            <field name="model">todo.task</field>
            <field name="inherit_id" ref="chap2vvt.view_form_todo_task"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="user_id"/>
                    <field name="sdt"/>
                </field>
                <field name="is_done" position="before">
                    <field name="date_deadline"/>
                </field>
                <field name="active" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <!-- Open Chatter widgets -->
                <sheet position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </field>
        </record>
        <!-- Extend list -->
        <record id="view_tree_todo_task_inherited" model="ir.ui.view">
            <field name="name">view_tree_todo_task_inherited</field>
            <field name="model">todo.task</field>
            <field name="inherit_id" ref="chap2vvt.view_tree_todo_task"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="user_id"/>
                    <field name="sdt"/>
                </field>
            </field>
        </record>
        <!-- Extend search -->
        <record id="view_filter_todo_task_inherited" model="ir.ui.view">
            <field name="name">view_filter_todo_task_inherited</field>
            <field name="model">todo.task</field>
            <field name="inherit_id" ref="chap2vvt.view_filter_todo_task"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="user_id"/>
                    <filter name="filter_my_tasks" string="My Tasks"
                            domain="[('user_id','in',[uid,False])]"/>
                    <filter name="filter_not_assigned" string="Not Assigned"
                            domain="[('user_id','=',False)]"/>
                </field>
            </field>
        </record>
        <!-- Modify menu item -->
        <!--<record id="chap3vvt.menu_todo_task" model="ir.ui.menu">-->
            <!--<field name="name">My To-Do</field>-->
        <!--</record>-->
        <!-- Action to open To-Do Task list -->
        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="chap3vvt_root" name="chap3"/>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="chap3vvt_menu_root" name="Task" parent="chap3vvt_root" action="chap2vvt.action_todo_task" sequence="1"/>

    </data>
</odoo>
